<?xml version="1.0" encoding="utf-8"?>

<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:fillViewport="true"
        android:background="@drawable/gradient"
        android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".MainActivity">

        <TextView
                android:layout_width="150dp"
                android:drawableTop="@drawable/ic_healing_white_150dp"
                android:textColor="@color/cardview_light_background"
                android:layout_height="wrap_content"
                android:textSize="40sp"
                android:ems="10"
                android:textAlignment="center"
                android:text="Be Safe"
                android:id="@+id/textView3"
                android:layout_marginTop="75dp" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="55dp"/>


        <EditText
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:textColor="@color/cardview_light_background"
                android:textColorHighlight="@color/cardview_light_background"
                android:textColorHint="@color/cardview_light_background"
                android:textColorLink="@color/cardview_light_background"
                android:shadowColor="@color/cardview_shadow_start_color"
                android:outlineAmbientShadowColor="@color/cardview_shadow_start_color"
                android:outlineSpotShadowColor="@color/cardview_shadow_start_color"
                android:id="@+id/email"
                app:layout_constraintEnd_toEndOf="parent"
                android:drawableLeft="@drawable/ic_action_person"
                android:hint="@string/email"
                android:layout_marginEnd="80dp" android:layout_marginTop="75dp"
                app:layout_constraintTop_toTopOf="parent" android:textSize="24sp"/>
        <EditText
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/password"
                android:layout_marginTop="8dp"
                android:textColorHint="@color/cardview_light_background"
                android:textColor="@color/cardview_light_background"
                app:layout_constraintTop_toBottomOf="@+id/email"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="80dp"
                android:drawableLeft="@drawable/ic_action_lock"
                android:visibility="visible"
                android:hint="@string/password" android:textSize="24sp"/>
        <TextView
                android:text="@string/u_olvidaste_tu_contrase_a_u"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/forgottenpassword"
                app:layout_constraintTop_toBottomOf="@+id/password"
                android:layout_marginTop="24dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="13dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="9dp" android:textSize="18sp"
                android:textColor="@color/common_google_signin_btn_text_dark"
                app:layout_constraintHorizontal_bias="0.71"/>
        <Button
                android:text="@string/login"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:id="@+id/login"
                android:backgroundTint="@color/common_google_signin_btn_text_dark"
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="135dp"
                app:layout_constraintCircleRadius="@dimen/cardview_compat_inset_shadow"
                app:layout_constraintCircleAngle="@android:integer/config_mediumAnimTime"
                app:layout_constraintTop_toBottomOf="@+id/forgottenpassword" android:layout_marginTop="16dp"
                android:textSize="24sp"/>
        <Button
                android:text="Register"
                app:layout_constraintCircleRadius="@dimen/cardview_compat_inset_shadow"
                app:layout_constraintCircleAngle="@android:integer/config_mediumAnimTime"
                android:layout_width="240dp"
                android:backgroundTint="@color/common_google_signin_btn_text_dark"
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:layout_height="wrap_content"
                android:id="@+id/register" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/login"
                android:layout_marginEnd="135dp" app:layout_constraintEnd_toEndOf="parent"
                android:textSize="24sp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
