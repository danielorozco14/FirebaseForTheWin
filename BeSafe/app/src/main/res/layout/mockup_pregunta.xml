<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="@drawable/gradient"
        android:orientation="vertical"
        android:layout_height="match_parent"
        tools:context=".FormsActivity">


    <LinearLayout
            android:orientation="vertical" android:layout_height="wrap_content" android:layout_width="match_parent">
        <include
                android:id="@+id/maintoolbar"
                layout="@layout/toolbar"
                android:layout_height="wrap_content" android:layout_width="match_parent" android:layout_weight="0"/>
    </LinearLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_weight="0" tools:layout_editor_absoluteY="56dp">
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text="Dummy Question"
                android:ems="10"
                android:id="@+id/editText"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="44dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="182dp"/>
        <EditText
                android:layout_width="105dp"
                android:layout_height="61dp"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/editText2" android:hint="Exposicion" android:layout_marginTop="56dp"
                app:layout_constraintTop_toBottomOf="@+id/editText"
                app:layout_constraintStart_toEndOf="@+id/editText3"/>
        <EditText
                android:layout_width="105dp"
                android:layout_height="61dp"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/editText4" android:hint="Probabilidad" android:layout_marginTop="56dp"
                app:layout_constraintTop_toBottomOf="@+id/editText"
                app:layout_constraintStart_toEndOf="@+id/editText2"/>
        <EditText
                android:layout_width="105dp"
                android:layout_height="61dp"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/editText3" android:hint="Severidad" android:layout_marginTop="56dp"
                app:layout_constraintTop_toBottomOf="@+id/editText" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="7dp"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/ic_image_placeholder"
                android:id="@+id/imageView" android:layout_marginTop="112dp"
                app:layout_constraintTop_toBottomOf="@+id/editText2" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.064"/>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true" app:srcCompat="@drawable/ic_add_black_24dp"
                android:id="@+id/floatingActionButton2"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.59" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="504dp" app:layout_constraintTop_toTopOf="parent"/>
        <Button
                android:text="Guardar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button" android:layout_marginTop="354dp"
                app:layout_constraintTop_toBottomOf="@+id/editText4" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="17dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>