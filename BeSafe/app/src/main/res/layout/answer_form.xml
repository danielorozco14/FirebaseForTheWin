<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent">


    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="<Question>"
              android:textSize="24dp"
              android:id="@+id/answerText"
              android:layout_marginTop="80dp"
              app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
              app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
              app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.498"/>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="Exposicion"
              android:textSize="20dp"

              android:layout_marginTop="156dp"
              app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
              android:layout_marginStart="16dp" android:id="@+id/textView7"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="Severidad"
              android:textSize="20dp"

              android:layout_marginTop="156dp"
              app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
              android:layout_marginStart="160dp" android:id="@+id/textView8"/>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="Probabilidad"
              android:textSize="20dp"

              android:layout_marginTop="156dp"
              app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
              android:layout_marginStart="280dp" android:id="@+id/textView9"/>
    <EditText
            android:layout_width="61dp"
            android:layout_height="72dp"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/exposicionET" android:layout_marginTop="220dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="36dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <EditText
            android:layout_width="61dp"
            android:layout_height="72dp"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/severidadET" android:layout_marginTop="220dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
            android:layout_width="61dp"
            android:layout_height="72dp"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/probabilidadET" android:layout_marginTop="220dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="32dp"
            app:layout_constraintEnd_toEndOf="parent"/>


    <ImageButton
            android:layout_width="77dp"
            android:layout_height="67dp" app:srcCompat="@android:drawable/ic_menu_camera"
            android:id="@+id/imageButton" android:layout_marginTop="456dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="220dp" android:tint="#00A30808"/>
    <ImageView
            android:layout_width="114dp"
            android:layout_height="130dp" app:srcCompat="@drawable/ic_image_placeholder"
            android:id="@+id/imageView"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="148dp"
            android:layout_marginTop="368dp" app:layout_constraintTop_toTopOf="parent"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="656dp"
            android:clickable="true"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_save_black_24dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" app:backgroundTint="#DD2C00" app:elevation="12dp"/>




</androidx.constraintlayout.widget.ConstraintLayout>